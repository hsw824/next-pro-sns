{
	"include": ["global.d.ts", "src", "axios.d.ts"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"jsx": "react-jsx",

		/* Language and Environment */
		"target": "ES5",
		"lib": ["esnext", "dom", "dom.iterable"],

		/* Modules */
		"module": "CommonJS",

		/* Emit */
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "./dist",
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
